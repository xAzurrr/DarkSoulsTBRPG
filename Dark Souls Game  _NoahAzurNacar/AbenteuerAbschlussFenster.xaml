<Window x:Class="Dark_Souls_Game___NoahAzurNacar.AbenteuerAbschlussFenster"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dark_Souls_Game___NoahAzurNacar"
        mc:Ignorable="d"
        Title="Dark Souls" Height="550" Width="700" Background="Gray"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="tbGewonnenVerloren" Text="Gewonnen" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="4"  Background="Gray" Foreground="GreenYellow" Grid.Row="0" Grid.Column="0" />
        <TextBlock x:Name="tbBelohnungGold" Text="Gold: +0" FontWeight="Bold" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="4"  Background="Gray" Foreground="White" Grid.Row="1" Grid.Column="0" />
        <TextBlock x:Name="tbBelohnungErfahrungspunkte" Text="Erf Punkte: +0" FontWeight="Bold" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="4"  Background="Gray" Foreground="White" Grid.Row="2" Grid.Column="0" />
        <Button x:Name="btnWeiterBeenden" Content="" Margin="5" FontWeight="Bold" Width="150" Height="50" Grid.Row="3"/>
    </Grid>
</Window>
