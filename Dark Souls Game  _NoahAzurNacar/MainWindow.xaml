<Window x:Class="Dark_Souls_Game___NoahAzurNacar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dark_Souls_Game___NoahAzurNacar"
        mc:Ignorable="d"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Title="Dark Souls" Height="550" Width="700" Background="Gray">
    <Grid ShowGridLines="True">
        <StackPanel>
            <TextBlock Text="DARK SOULS" FontSize="30" HorizontalAlignment="Center"/>
            <TextBlock Text="bitte gebe ein namen ein" FontSize="20" HorizontalAlignment="Center" Foreground="LightGray"/>
            <TextBox x:Name="txtname" Width="200" Height="30" HorizontalAlignment="Center" Margin="5" FontSize="18"/>
            <Button Content="Samurai" Click="btnWaehlenSamurai_Click" Margin="10" Width="400" Height="30" Background="White"/>
            <Image x:Name="ImageboxSamurai" Height="75" Width="75"/>
            <Button Content="Ritter"  Click="btnWaehlenRitter_Click"  Margin="10" Width="400" Height="30" Background="White"/>
            <Image x:Name="ImageboxRitter" Height="75" Width="75"/>
            <Button Content="Magier"  Click="btnWaehlenMagier_Click"  Margin="10" Width="400" Height="30" Background="White"/>
            <Image x:Name="ImageboxMagier" Height="75" Width="75"/>
        </StackPanel>

    </Grid>
</Window>
